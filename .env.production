# PeachieGlow Production Environment Variables
# Copy this file to .env.local for local development
# For Netlify deployment, set these in Netlify Dashboard > Site Settings > Environment Variables

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-site-name.netlify.app

# AI Configuration (Step 2)
# OPENAI_API_KEY=your-openai-api-key-here
# AI_MODEL=gpt-3.5-turbo
# AI_MAX_TOKENS=1000

# Database Configuration (Step 3)
# DATABASE_URL=your-postgresql-connection-string
# DATABASE_POOL_SIZE=10

# Authentication (Step 4)
# NEXTAUTH_URL=https://your-domain.vercel.app
# NEXTAUTH_SECRET=your-nextauth-secret-here
# GOOGLE_CLIENT_ID=your-google-oauth-client-id
# GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Payment Integration (Step 5)
# STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
# STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Analytics & Monitoring
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Email Service
# RESEND_API_KEY=your-resend-api-key
# FROM_EMAIL=noreply@your-domain.com

# Security
# ENCRYPTION_KEY=your-32-character-encryption-key
# JWT_SECRET=your-jwt-secret-here

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_TESTING_DASHBOARD=true
NEXT_PUBLIC_DEMO_MODE=false
